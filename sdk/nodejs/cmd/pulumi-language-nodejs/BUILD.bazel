        "@com_github_pulumi_pulumi_pkg_v3//codegen/schema:go_default_library",
        "@com_github_pulumi_pulumi_sdk_v3//go/common/resource/config:go_default_library",
        "@com_github_pulumi_pulumi_sdk_v3//go/common/resource/plugin:go_default_library",
        "@com_github_pulumi_pulumi_sdk_v3//go/common/util/cmdutil:go_default_library",
        "@com_github_pulumi_pulumi_sdk_v3//go/common/util/contract:go_default_library",
        "@com_github_pulumi_pulumi_sdk_v3//go/common/util/executable:go_default_library",
        "@com_github_pulumi_pulumi_sdk_v3//go/common/util/fsutil:go_default_library",
