    name = "env",
    srcs = ["env.go"],
    importpath = "github.com/pulumi/pulumi/sdk/go/common/util/env",
    visibility = ["//visibility:public"],
    deps = ["//sdk/go/common/util/cmdutil:go_default_library"],
)

